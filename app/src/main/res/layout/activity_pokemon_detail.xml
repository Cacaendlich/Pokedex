<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_list"
    android:orientation="vertical"
    tools:context=".presentation.ui.details.PokemonDetailActivity">

    <ImageView
        android:id="@+id/backgroundShape"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/background_pokemondetail_image"
        android:scaleType="fitXY"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/image_view_pokemon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/imagePokemonSquirtel"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/todo"/>

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_007"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/seta_esquerda"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/favorite_off"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="end"
        android:contentDescription="@string/star_white_favorite"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/squirtle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_below="@+id/backgroundShape"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutTypes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewName"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="20sp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTypes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_Weight_Height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutTypes"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20sp">

        <LinearLayout
            android:id="@+id/linearLayout_Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="50dp">

            <TextView
                android:id="@+id/weight_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_90_1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/height_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>